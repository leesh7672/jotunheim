{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jotunheim Kernel",
      "type": "gdb",
      "request": "attach",
      "remote": true,
      "target": "localhost:1234",
      "cwd": "${workspaceFolder}/jotunheimkernel",
      "executable": "${workspaceFolder}/jotunheimkernel/target/x86_64-unknown-none/debug/jotunheim-kernel",
      "gdbpath": "/usr/local/bin/gdb",
      "preLaunchTask":"delay",
      "debugger_args": [
        "-q",
        "-iex",
        "set non-stop off",
        "-iex",
        "set target-async off",
        "-iex",
        "set tdesc filename ${workspaceFolder}/.gdb/tdesc-x86_64.xml",
        "-ex",
        "set debug remote 1"
      ]
    }
  ]
}